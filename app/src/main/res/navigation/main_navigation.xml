<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/foodListFragment">

    <fragment
        android:id="@+id/foodListFragment"
        android:name="com.example.chowzy.presentation.home.HomeFragment"
        android:label="fragment_food_list"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_foodListFragment_to_foodDetailActivity"
            app:destination="@id/foodDetailActivity" />
    </fragment>
    <activity
        android:id="@+id/foodDetailActivity"
        android:name="com.example.chowzy.presentation.detailfood.DetailFoodActivity"
        android:label="activity_detail"
        tools:layout="@layout/activity_detail" />

    <fragment
        android:id="@+id/menu_tab_cart"
        android:name="com.example.chowzy.presentation.cart.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/menu_tab_profile"
        android:name="com.example.chowzy.presentation.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/menu_tab_home"
        android:name="com.example.chowzy.presentation.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
</navigation>